#overlay
	height 100%
	left 0px
	position absolute
	text-align center
	top 0px
	visibility hidden
	width 100%
	z-index 2	
	div
		width 95%
		margin 100px auto
		background #fff
		border 1px solid #000
		box-shadow 7px 7px 50px 100000px rgba(150, 150, 150, 0.5)
		padding 15px
		text-align center
		table
			font-size 15px
			margin 1em auto
			text-align center
			tr				
				margin 0.5em
				&:hover
					background #09f
			th
			td
				padding .3em